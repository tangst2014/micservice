/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.tasks{
  display: flex;
  flex-direction: column;
}
.tasks .tasks-all{
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
}

.tasks .tasks-all-title{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
}
.tasks .tasks-all-btn{
   display: flex;
   flex-direction: row;
   margin: 43rpx 0rpx;
}
button {
  padding: 0;
  min-height: 0 !important;
  margin-top: 20rpx;
  border: 1px solid #888;
  background-color: red;
  font-weight: 300;
  color: white;
}

form{
  width: 100%;
}
form textarea{
  width: 94%;
  padding: 10rpx;
  border: 1px solid rgb(185, 185, 185);
  background-color: rgb(250, 250, 250);
  border-radius: 10rpx;
  font-size: 30rpx;
}
.section{
  padding: 12rpx 15rpx;
  position: relative;
}
.section .section__title{
  margin: 20rpx 0;
  font-weight: bold;
  font-size:35rpx;
}
