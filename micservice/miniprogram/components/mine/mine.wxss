
.container{
  width: 100%;
}
.header{
  display: flex;
  flex-direction: row;
  align-items: center; 
  justify-content: space-between;
  
  margin-top: 20rpx;
  padding-left: 162rpx;
  padding-right: 162rpx;
}
.header .select{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 10rpx;
  min-width: 100rpx;
  padding: 5rpx;
}
.header .selected{
  color: white;
  background-color: black;
  border-bottom: 5rpx solid black;
}

.userEval{
  margin: 20rpx 20rpx;
  line-height: 60rpx;
  padding: 5rpx 10px;
  box-shadow: 1px 1px 3px 0px;
}


.userEval  .userEval-tasks-evalute{
  display: flex;
  flex-direction: column;
}


.userEval .userEval-department{
  font-weight: bold;
  display: flex;
  justify-content: space-between;

}

.login{
  margin-top:50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: bold;
}