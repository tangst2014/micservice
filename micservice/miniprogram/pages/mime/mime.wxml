<view class="header" wx:if="{{doing.length>1}}">
    <text wx:for="{{doing}}" wx:key="this" class="{{intoview==index?'selected':'unselected'}}" bindtap="onSwitch" data-id="{{index}}">{{item}}</text>
</view>
<view wx:for="{{tasks}}" wx:key="this" wx:if="{{intoview==index}}">
    <view class="userEval">
      <block wx:if="{{item.length>0}}">
        <view wx:for="{{item}}" wx:key="index" wx:for-item="info" class="userEvalutes">
            <view class="userEvalutes-department">
              <view>部门：{{info.department}}</view>
              <view wx:if="{{info.status==true}}" bindtap="bindGetUserInfo" id="{{index}}">去评价</view>
            </view>
            <view class="userEvalutes-time">
            开始时间：{{info.starttime}}
            </view>
            <view class="userEvalutes-tasks">
            问题描述：{{info.tasks}}
            </view> 

            <view>
              评价：{{info.tasks_evalute.text}}
            </view>
          <!-- <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">评价</button> -->

        </view>
      </block>
      <block wx:else>
        <view>暂无数据</view>
      </block>
    </view>
</view>
