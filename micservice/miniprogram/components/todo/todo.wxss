/* miniprogram/pages/index/index.wxss */
.search-section{
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgb(199, 199, 199);
  margin: 20rpx;
  padding: 7rpx;
  border-radius: 15rpx;


}
.search-section .search-pancel{
  display: flex;
  flex-direction: row;
  align-items: center;


}
.search-section .search-pancel input{
  flex: 8; 
  background-color: rgb(199, 199, 199);
  padding:  5px 0 5px 10px;
  font-size: 30rpx;
}
.search-section .search-pancel image{
  width: 50rpx;
  height: 50rpx;

}

.header{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  font-size: 33rpx;
  font-weight: bold;
}

.header .selected{
  padding: 2rpx 30rpx 2rpx 30rpx;
  border-bottom: rgb(195,168,105) solid 10rpx;
  background-color: rgb(233, 154, 6);
  color: white;
}

.header .unselected{
  padding: 2rpx 30rpx 2rpx 30rpx;
  background-color: #f6f6f6;
  color: black;
}

.page-info{
  display: flex;
  flex-direction: row;
  margin: 20rpx;

}
.page-info .page-info-image{
  display: flex;
}
.page-info .page-info-image image{
  width: 220rpx;
  height: 230rpx;
}
.page-info .page-info-content{
  display: flex;
  flex-direction: column;
  padding: 0 0 0 10rpx;
  font-size: 35rpx;
  overflow: ellipsis;
  word-break: break-word;
}
.page-info .page-info-content .page-info-content-task{
  display: flex;
}
.page-info .page-info-content .page-info-content-score{
  display: flex;
}


.userEval{
  margin: 20rpx 20rpx;
  line-height: 60rpx;

}
.userEval .userEvalutes{
  margin: 30rpx 0;
}

.userEval .userEvalutes .userEvalutes-tasks-evalute{
  display: flex;
  flex-direction: column;
}
.userEval .userEvalutes .userEvalutes-tasks-evalute .star{
  display: flex;
  flex-direction: row;
  align-items: center;

}
.userEval .userEvalutes .userEvalutes-tasks-evalute .star image{
  width: 224rpx;
  height: 33rpx;
}

.userEval .userEvalutes .userEvalutes-tasks-evalute .hotevalute{
  display: flex;
  flex-direction: row;
}
.userEval .userEvalutes .userEvalutes-tasks-evalute .hotevalute .hotevalute-item{

  background-color: rgb(219, 214, 214);
  margin-left: 20rpx;
  padding: 0 10rpx;
  border-radius: 18rpx;
  font-size: 30rpx;

}

.userEval .userEvalutes .userEvalutes-department{
  font-weight: bold;
  display: flex;
  justify-content: space-between;

}

.userEval .userEvalutes .userEvalutes-time{
  
}

.userEval .userEvalutes .userEvalutes-tasks{
 
}

.userEval .userEvalutes .userEvalutes-doing{
   
}


.myuserInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.myuserInfo .myuserInfo-userInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.myuserInfo text{
  font-size: 25rpx;
  color: rgb(153, 151, 151);
}
.myuserInfo image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 20%;
}