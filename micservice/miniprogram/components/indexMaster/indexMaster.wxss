

.search-section{
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgb(199, 199, 199);
  margin: 20rpx;
  padding: 7rpx;
  border-radius: 15rpx;


}
.search-section .search-pancel{
  display: flex;
  flex-direction: row;
  align-items: center;


}
.search-section .search-pancel input{
  flex: 8; 
  background-color: rgb(199, 199, 199);
  padding:  5px 0 5px 10px;
  font-size: 30rpx;
}
.search-section .search-pancel image{
  width: 50rpx;
  height: 50rpx;

}

.header-section{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  font-size: 33rpx;
  font-weight: bold;
}

.header-section .selected{
  padding: 2rpx 30rpx 2rpx 30rpx;
  border-bottom: rgb(195,168,105) solid 10rpx;

}

.header-section .unselected{
  padding: 2rpx 30rpx 2rpx 30rpx;
  background-color: #f6f6f6;
  color: black;
}



.tasks-section{
  margin-bottom: 40rpx;
}
.tasks-section .tasks{
  margin: 0rpx 20rpx;
  display: flex;

}

.tasks-section .tasks .tasks-item-header{
  display: flex;
  justify-content: flex-end;
  font-size: 40rpx;
  color: gray;
}

.tasks-section .tasks .tasks-item-sections{
  width: 100%;

  margin: 20rpx 0;
  padding: 5rpx 10px;
  background: white;
  line-height: 60rpx;
  box-shadow: 1px 1px 3px 0px;
}
.tasks-item-sections .tasks-item-section{
  margin: 30rpx 0;
  
}

.tasks-item-sections .tasks-item-section .tasks-item-department{
  font-weight: bold;
  font-size: 35rpx;
}
.tasks-item-sections .tasks-item-section .tasks-item-time{

  font-size: 31rpx;
  color: gray;

}
.tasks-item-sections .tasks-item-section .tasks-item-question{

  font-size: 35rpx;
}
.tasks-item-sections .tasks-item-section .tasks-item-score{
  color: rgb(170, 112, 5);
  font-size: 40rpx;
}


.floot-section{
  margin-bottom: 100rpx;
  display: flex;
  justify-content: center;
}

